<?xml version="1.0" encoding="utf-8"?>
<!-- 记事本-用户注册页面布局 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_login"
    android:padding="20dp">

    <!-- 页面标题：和登录页样式一致，距顶部150dp -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="记事本-用户注册"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="40dp"/>

    <!-- 账号输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账  号："
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/et_reg_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请设置您的账号"
            android:textSize="18sp"
            android:background="@null"
            android:inputType="text"/>
    </LinearLayout>

    <!-- ✅ 新增：个人昵称输入框 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵  称："
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/et_reg_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="请设置您的个人昵称"
            android:textSize="18sp"
            android:background="@null"
            android:inputType="text"/>
    </LinearLayout>

    <!-- 密码输入框（带可见切换） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:layout_marginBottom="15dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密  码："
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/et_reg_pwd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请设置6-16位密码"
            android:textSize="18sp"
            android:background="@null"
            android:inputType="textPassword"/>

        <ImageView
            android:id="@+id/iv_reg_eye1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_eye_close"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- 确认密码输入框（带可见切换） -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:padding="10dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认密码："
            android:textSize="18sp"
            android:textColor="#666666"
            android:layout_marginRight="10dp"/>

        <EditText
            android:id="@+id/et_reg_pwd_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="请再次输入密码"
            android:textSize="18sp"
            android:background="@null"
            android:inputType="textPassword"/>

        <ImageView
            android:id="@+id/iv_reg_eye2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_eye_close"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            android:focusable="true"/>
    </LinearLayout>

    <!-- 功能按钮组：注册 + 返回登录 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <Button
            android:id="@+id/btn_reg_confirm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="注 册"
            android:textSize="18sp"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginRight="10dp"/>

        <Button
            android:id="@+id/btn_reg_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="返回登录"
            android:textSize="18sp"
            android:backgroundTint="#9E9E9E"
            android:textColor="#FFFFFF"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

</LinearLayout>